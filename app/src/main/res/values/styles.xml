<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/robotoslabbold</item>
    </style>

    <!-- Editor Theme -->
    <style name="EditorTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/EditorColorPrimary</item>
        <item name="colorPrimaryDark">@color/EditorColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/robotoslabbold</item>
    </style>

    <!-- Editor fields -->
    <style name="EditorStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/robotoslabregular</item>
    </style>

    <!-- Editor fields 2-->
    <style name="EditorStyle2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/robotoslabbold</item>
    </style>

    <!-- Editor fields 3-->
    <style name="EditorStyle3">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/robotoslabbold</item>
    </style>

    <!-- Button style -->
    <style name="btn">
        <item name="android:textSize">@dimen/item_text_size</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:backgroundTint">#FBEF1E</item>
    </style>

    <style name="ActionButton" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:padding">@dimen/drawablePadding</item>
    </style>

</resources>

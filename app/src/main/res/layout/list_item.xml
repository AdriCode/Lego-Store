<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/item_img_width"
        android:layout_height="@dimen/item_img_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/item_img_margin_top"
        android:background="@drawable/logo"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:padding="@dimen/item_padding2"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/item_text_size"
        android:textStyle="bold"
        tools:text="Product Name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@android:color/background_light"
        android:layout_marginBottom="@dimen/item_img_margin_top">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/Q"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:padding="@dimen/item_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/item_padding2"
                    android:text="@string/quantityLabel"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/item_text_size" />

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_text_size"
                    tools:text="Quantity" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Q"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:padding="@dimen/item_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/item_padding2"
                    android:text="@string/priceLabel"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/item_text_size" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_text_size"
                    tools:text="Price" />
            </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/sale"
            style="@style/button"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="@string/sale" />

    </LinearLayout>
</LinearLayout>